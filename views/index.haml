%main{ role: 'main' }
  %form{ method: 'post', action: '/create' }
    .form-group
      %label{ for: 'client_name' }
        会社ID
      %input#client_name.form-control{ type: 'text', name: 'client_name', "aria-describedby": 'clientNameHelp', placeholder: '会社ID' }
      %small#clientNameHelp.form-text.text-muted
        ジョブカンで使用している会社ID
    .form-group
      %label{ for: 'inputEmail' }
        メールアドレス
      %input#inputEmail.form-control{ type: 'email', name: 'user_name', "aria-describedby": 'emailHelp', placeholder: 'jobcan@example.com' }
      %small#emailHelp.form-text.text-muted
        ジョブカンで使用しているメールアドレス
    .form-group
      %label{ for: 'inputPassword' }
        パスワード
      %input#inputPassword.form-control{ type: 'password', name: 'password', "aria-describedby": 'passwordHelp', placeholder: 'Password' }
      %small#passwordHelp.form-text.text-muted
        ジョブカンで使用しているパスワード
    %button.btn.btn-primary{ type: 'submit' }
      Webhook URLを取得
